<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.sric.dao.picture.PictureDataMapper">

    <select id="randomFind" resultType="PictureData">
        select * from
        picture_data
        <if test="isR != null">
            where r18=#{isR}
        </if>
        ORDER BY RAND() LIMIT #{num}
    </select>
</mapper>