<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.sric.dao.picture.PictureDataMapper">

    <select id="randomFind" resultType="PictureData">
        select * from
        picture_data
        <where>

            <if test="isR != null">
                and r18=#{isR}
            </if>

            <if test="like !=null and like!='' ">
                and tags like "%#{like}%"
            </if>

            --
        </where>


        ORDER BY RAND() LIMIT #{num}
    </select>
</mapper>